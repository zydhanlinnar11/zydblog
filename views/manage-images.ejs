<div id="main-content">
  <% if (images.length == 0) { %>
  <div style="padding-top: 64px; opacity: 0.8" class="col-12 text-center">
    <i class="fa fa-ban fa-7x"></i>
    <h5 style="margin-top: 24px">You've no images.</h5>
  </div>
  <% } %>
  <div class="row">
    <% images.forEach(image => { %>
    <div class="col-lg-3">
      <div style="margin-bottom: 16px" class="card col-lg-12">
        <div class="card-body">
          <img
            src="<%= image.path %>"
            alt="<%= image.filename %> thumbnail"
            class="card-img-top"
            style="margin-bottom: 16px"
          />
          <h5 class="card-title"><%= image.filename %></h5>
          <p class="card-text"><%= image.description %></p>
          <div style="margin: auto" class="row">
            <form
              action="/admin/manage-images/<%= image._id %>?_method=DELETE"
              method="POST"
              class="col-12"
              style="padding: 0"
            >
              <button class="btn btn-danger col-12">Delete image</button>
            </form>
          </div>
        </div>
      </div>
    </div>
    <% }) %>
  </div>
</div>
