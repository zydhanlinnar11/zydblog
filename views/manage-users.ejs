<% if (success == 'yes') { %>
<div class="alert alert-success" role="alert">
  <i class="far fa-check-circle"></i>
  User successfully deleted!
</div>
<% } %> <% if (success == 'no') { %>
<div class="alert alert-danger" role="alert">Delete user failed!</div>
<% } %>

<div id="main-content">
  <% if (users.length == 0) { %>
  <div style="padding-top: 64px; opacity: 0.8" class="col-12 text-center">
    <i class="fa fa-ban fa-7x"></i>
    <h5 style="margin-top: 24px">You've no admin.</h5>
  </div>
  <% } %>
  <div class="row">
    <% users.forEach(user => { %>
    <div class="col-lg-3">
      <div style="margin-bottom: 16px" class="card col-lg-12">
        <div class="card-body text-center">
          <i class="fas fa-user card-img-top fa-3x"></i>
          <h5 class="card-title"><%= user.username %></h5>
          <div style="margin: auto" class="row">
            <form
              action="/blog/admin/manage-users/<%= user.username %>?_method=DELETE"
              method="POST"
              class="col-12"
              style="padding: 0"
            >
              <% if (user.username == blogOwner ) { %>
              <button class="btn btn-danger col-12" disabled>
                Can't delete blog owner
              </button>
              <% } else if (user.username == currentUserName) { %>
              <button class="btn btn-danger col-12" disabled>
                Can't delete yourself
              </button>
              <% } else { %>
              <button class="btn btn-danger col-12">Delete user</button>
              <% } %>
            </form>
          </div>
        </div>
      </div>
    </div>
    <% }) %>
  </div>
</div>
